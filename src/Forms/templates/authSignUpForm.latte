<div n:snippet="form">
{form form}

	<div class="alerts text-left" n:if="$form->hasErrors()">
		<div class="alert alert-danger" n:foreach="$form->getErrors() as $error">{_$error}</div>
	</div>

	<div class="well well-sm clearfix" n:if="isset($project)">
		<div class="pull-left" style="margin-right: 8px">
			<i class="fas fa-suitcase fa-3x fa-fw"></i>
		</div>
		<div class="pull-left">
			<strong>{$project->getName()}</strong><br>
			<span class="label label-default">{('nette.role.'.$role)|translate}</span>
		</div>
	</div>

	<div class="form-group required">
		<label n:name="name" class="sr-only">{_nette.user.name}</label>
		<div class="input-group">
			<label n:name="name" class="input-group-addon"><i class="fas fa-fw fa-user"></i></label>
			<input type="email" n:name="name" class="form-control" placeholder="{_nette.user.name}" autofocus="autofocus">
		</div>
	</div>

	<div class="form-group required">
		<label n:name="email" class="sr-only">{_nette.user.email}</label>
		<div class="input-group">
			<label n:name="email" class="input-group-addon"><i class="fas fa-fw fa-envelope"></i></label>
			<input type="email" n:name="email" class="form-control" placeholder="{_nette.user.email}" autofocus="autofocus">
		</div>
	</div>

	<div class="form-group required">
		<label n:name="password" class="sr-only">{_nette.user.password}</label>
		<div class="input-group">
			<label n:name="password" class="input-group-addon"><i class="fas fa-fw fa-lock"></i></label>
			<input type="password" n:name="password" class="form-control" placeholder="{_nette.user.password}">
		</div>
	</div>

	<div class="form-group">
		<div class="checkbox">
			<label>
				<input type="checkbox" n:name="agreement">
				<strong>{_nette.user.agreement}</strong>
			</label>
		</div>
	</div>

	<div n:name="recaptcha"></div>

	<div class="form-group">
		<button type="submit" n:name="submit" class="btn btn-primary">{_nette.button.signUp|noescape}</button>
		<a href="{plink signIn}" class="btn btn-default">{_nette.button.signIn|noescape}</a>
	</div>

{/form}
</div>
